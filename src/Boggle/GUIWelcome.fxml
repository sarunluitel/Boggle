<?xml version="1.0" encoding="UTF-8"?>

<!--This is the FXML layout that provides components for welcome screen
        and option to choose the size of boards-->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane opacity="0.74" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Boggle.GUIController">


    <Label fx:id="lblWelcome" layoutX="24.0" layoutY="106.0" text="Welcome to Boggle. Start by choosing your board size">
        <font>
            <Font name="System Bold" size="18.0" />
        </font></Label>
    <Button fx:id="btn5x5" layoutX="344.0" layoutY="181.0" mnemonicParsing="false" onAction="#clicked5" prefHeight="39.0" prefWidth="69.0" styleClass="Button" stylesheets="@DesignSheet.css" text="5x5">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Button>
    <Button fx:id="btn4x4" layoutX="174.0" layoutY="181.0" mnemonicParsing="false" onAction="#clicked4" prefHeight="39.0" prefWidth="69.0" styleClass="Button" stylesheets="@DesignSheet.css" text="4x4">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Button>
    <HBox />

</AnchorPane>
